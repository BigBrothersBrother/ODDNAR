{"components/products/options/swatch":"<div class=\"form-field {{this.display_name}}\" data-product-attribute=\"swatch\">\r\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\">\r\n        <span class=\"mobhide\">PLEASE SELECT</span> {{this.display_name}}\r\n        <span data-option-value></span>\r\n    </label>\r\n    <div class=\"swipeleft\">Swipe Left For More</div>\r\n    <div id=\"optionscroll\">\r\n    {{#each this.values}}\r\n        <input class=\"form-radio {{this.label}} swatchinput\" type=\"radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" id=\"attribute_{{id}}\" {{#if selected}}checked{{/if}} {{#if ../required}}required{{/if}}>\r\n        <label class=\"form-option form-option-swatch swatchselect {{this.label}}\" for=\"attribute_{{id}}\" data-product-attribute-value=\"{{id}}\" data-swatch=\"{{this.label}}\">\r\n            {{#if image}}\r\n                <span class='form-option-variant form-option-variant--pattern' title=\"{{this.label}}\" style=\"background-image: url('{{getImage image \"small\"}}');\"></span>\r\n            {{/if}}\r\n            {{#if data.[2]}}\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[1]}}\"></span>\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[2]}}\"></span>\r\n            {{else}}\r\n                {{#if data.[1]}}\r\n                    <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                    <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[1]}}\"></span>\r\n                {{else}}\r\n                    {{#if data.[0]}}\r\n                        <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                    {{/if}}\r\n                {{/if}}\r\n            {{/if}}\r\n            {{#if pattern}}\r\n                <span class=\"form-option-expanded\">\r\n                    <span class=\"form-option-image\" style=\"background-image: url('{{getImage image 'core-swatch'}}');\"></span>\r\n                    <span class=\"expanded-title\">{{this.label}}</span>\r\n                </span>\r\n            {{/if}}\r\n        </label>\r\n    {{/each}}\r\n</div>\r\n</div>\r\n"}
